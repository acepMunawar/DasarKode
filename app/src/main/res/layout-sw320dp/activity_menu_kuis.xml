<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00C6EB"
    tools:context=".menu_kuis">

    <ImageView
        android:id="@+id/logo_dk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="89dp"
        android:layout_marginBottom="1dp"
        android:src="@drawable/logo_dk_home"
        app:layout_constraintBottom_toTopOf="@+id/button_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_custom_gray"
        android:text="Info"
        android:textColor="#E9E9F0"
        app:layout_constraintBottom_toTopOf="@+id/border_background_1"
        app:layout_constraintEnd_toStartOf="@+id/button_belajar"
        app:layout_constraintStart_toEndOf="@+id/button_kuis"
        app:layout_constraintTop_toBottomOf="@+id/logo_dk"
        app:layout_constraintVertical_bias="0.558" />

    <Button
        android:id="@+id/button_belajar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_custom_gray"
        android:text="Belajar"
        android:textColor="#E9E9F0"
        app:layout_constraintBottom_toTopOf="@+id/border_background_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_info"
        app:layout_constraintTop_toBottomOf="@+id/logo_dk"
        app:layout_constraintVertical_bias="0.558" />

    <Button
        android:id="@+id/button_kuis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_custom_gray"
        android:text="Kuis"
        android:textColor="#E9E9F0"
        app:layout_constraintBottom_toTopOf="@+id/border_background_1"
        app:layout_constraintEnd_toStartOf="@+id/button_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_dk"
        app:layout_constraintVertical_bias="0.558" />

    <TextView
        android:id="@+id/border_background_1"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_gravity="center"
        android:background="#314557"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/border_background_2"
        android:layout_width="280dp"
        android:layout_height="190dp"
        android:layout_gravity="center"

        android:layout_marginBottom="140dp"
        android:background="#E9E9F0"
        app:layout_constraintBottom_toBottomOf="@+id/border_background_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_info"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>