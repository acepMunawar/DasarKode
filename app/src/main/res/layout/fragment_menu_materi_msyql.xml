                android:layout_marginEnd="31dp"
                android:layout_marginRight="31dp"
                android:background="@color/colorAqua"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:text="Retrieve,Group, Filter dan pattern matching"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button_seventh_materi" />

            <Button
                android:id="@+id/button_nineth_materi"
                android:layout_width="290dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="31dp"
                android:layout_marginRight="31dp"
                android:background="@color/colorAqua"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:text="Relasi database, query, view dan join"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button_eighth_materi" />

            <Button
                android:id="@+id/button_tenth_materi"
                android:layout_width="290dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="31dp"
