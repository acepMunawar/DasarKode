                android:layout_height="7.5in"
                android:src="@drawable/cppoperatorpembanding"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="4087dp"
                app:layout_constraintTop_toBottomOf="@+id/FourthTheory"
