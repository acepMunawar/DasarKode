                <ImageView
                    android:id="@+id/ThirdTheory"
                    android:layout_width="match_parent"
                    android:layout_height="7.5in"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/cppoperatorpembanding"
                    app:layout_constraintEnd_toEndOf="parent"
