<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00C6EB"
    tools:context=".home">

    <TextView
        android:id="@+id/border_background_1"
        android:layout_width="500dp"
        android:layout_height="340dp"
        android:layout_gravity="center"
        android:layout_marginTop="390dp"
        android:background="#314557"
        android:textSize="30sp" />
    <TextView
        android:id="@+id/border_background_2"
        android:layout_width="280dp"
        android:layout_height="190dp"
        android:layout_gravity="center"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="390dp"
        android:background="#E9E9F0"
        />

    <Button
        android:id="@+id/button_kuis"
        android:background="@drawable/button_custom_1"
        android:textColor="#E9E9F0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kuis"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="40dp"
        />

    <Button
        android:id="@+id/button_belajar"
        android:background="@drawable/button_custom_1"
        android:textColor="#E9E9F0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Belajar"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="163dp"
        />

    <Button
        android:id="@+id/button_info"
        android:background="@drawable/button_custom_1"
        android:textColor="#E9E9F0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Info"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="280dp"
        />

    <ImageView
        android:id="@+id/logo_dk"
        android:layout_width="500dp"
        android:layout_height="265dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/logo_dk" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:src="@drawable/blue_number"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="80dp"
        />




</RelativeLayout>